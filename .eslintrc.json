{
  "env": {
    "browser": true
  },
  "globals": {
    "require": true,
    "fabric": true,
    "Promise": true,
    "Error": true,
    "setTimeout": true,
    "__dirname": true,
    "process": true,
    "global": true,
    "describe": true,
    "before": true,
    "it": true,
    "module": true,
    "exports": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 5
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": 0,
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      120
    ]
  }
}
